<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pin_full_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pin_full_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@string/header_title" />

        <TextView
            android:id="@+id/url_wiki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"

            android:clickable="true"
            android:textColor="#0C70F2"
            android:text="@string/upload_wiki" />

        <TextView
            android:id="@+id/pin_full_window_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@string/full_text" />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/full_pin_info_card_month1"
        android:clickable="true"
        android:focusable="false"
        android:checkable="false"
        app:strokeWidth="2dp"
        android:layout_height="120dp"
        android:layout_width="match_parent"

        app:cardElevation="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >

        <LinearLayout
            android:id="@+id/full_pin_info_card_month1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/month_title"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text= "1ì›”" />
            <ImageView
                android:id="@+id/thumbnail01_1"
                android:layout_width="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tree1"/>
            <ImageView
                android:id="@+id/card_thumbnail01_2"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tree2" />
            <ImageView
                android:id="@+id/card_thumbnail01_3"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tree3" />


        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsed_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

