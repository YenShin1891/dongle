<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.EcoMap.Description" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        </style>
    <style name="CardImageDisplay">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/tree0</item>
    </style>
    <style name="FullImageDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">410dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/tree0</item>
    </style>
    <style name="FullImageText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="CreateProfileTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar"></style>

</resources>